<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shoppinglistfrag"
    tools:context=".ui.shoppinglist.ShoppinglistFragment"
    android:paddingBottom="?attr/actionBarSize">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shopping_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/shoppinglistitem"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shoppinglistmenu_fap"
        android:src="@drawable/ic_shoppingadd"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="@color/colorPrimary"
        android:tint="@android:color/white"
        android:layout_gravity="bottom|end"
        android:layout_margin="32dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shoppinglistadd_fap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        android:src="@drawable/ic_add_24"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="32dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shoppinglistrecommd_fap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        android:src="@drawable/ic_recommdlist_add_24"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="32dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shoppinglistclear_fap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        android:src="@drawable/ic_baseline_clear_all_24"
        android:layout_marginBottom="240dp"
        android:layout_marginRight="32dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>