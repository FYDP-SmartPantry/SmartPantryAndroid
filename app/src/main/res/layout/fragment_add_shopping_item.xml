<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/addItemFrag"
    tools:context=".ui.addshoppingitem.AddItemToShoppinglistFragment">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_shoppingitem_name"
        android:hint="Shopping Item Name"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_shoppingitem_quantity"
        android:hint="Shopping Item Quantity"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_shoppingitem_stockType"
        android:hint="Shopping Item Stock Type"
        android:inputType="text"/>
    <LinearLayout
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="16dp"
            app:icon="@drawable/ic_close"
            android:id="@+id/backAddItem"
            android:textColor="#FFFFFF"
            app:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="16dp"
            android:id="@+id/SaveAddItem"
            app:icon="@drawable/ic_save"
            android:textColor="#FFFFFF"
            app:backgroundTint="?attr/colorPrimary"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

    </LinearLayout>
</LinearLayout>