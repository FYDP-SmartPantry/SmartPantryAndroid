<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.foodstatus.FoodstatusFragment"
    android:paddingBottom="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4">
        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pie_chart"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pie_chart_description"
        android:layout_weight="7"
        android:gravity="center"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="last week you nutrition is 30%"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4">
        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/bar_chart"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bar_chart_description"
        android:layout_weight="7"
        android:gravity="center"
        android:textColor="@color/common_google_signin_btn_text_light"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="your bla bla bla has been improved bla bla bla"
        >
    </TextView>
</LinearLayout>