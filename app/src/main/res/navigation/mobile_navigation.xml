    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.uwaterloo.smartpantry.ui.foodinventory.FoodinventoryFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_foodinventory" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.uwaterloo.smartpantry.ui.foodcamera.ShoppinglistFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_foodcamera" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.uwaterloo.smartpantry.ui.foodstatus.StatusFragment"
        android:label="@string/title_notifications"
